@model WeddingPlanner.Models.WeddingViewModel
@using WeddingPlanner.Models
<button><a asp-controller="Users" asp-action="logout">LogOut</a></button>
<button><a asp-controller="Wedding" asp-action="Dashboard" >Dashboard</a></button>

<form asp-controller="Wedding" asp-action="AddWedding" method= "post" >
    <label asp-for="Bride"></label>
    <input class="form-control" asp-for="Bride"/>
    <span class="error" asp-validation-for="Bride"></span>

    <label asp-for="Groom"></label>
    <input  class="form-control" asp-for="Groom" />
    <span class="error" asp-validation-for="Groom" ></span>

    <label asp-for="Date"></label>
    <input class="form-control" asp-for="Date"/>
    <span class="error" asp-validation-for="Date"></span>

    <label asp-for="Address"></label>
    <input class="form-control" asp-for="Address"/>
    <span class="error" asp-validation-for="Address" ></span>
    <br>
    <button type="submit" >Create Wedding</button>

</form>