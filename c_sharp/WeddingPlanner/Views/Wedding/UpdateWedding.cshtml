@model WeddingPlanner.Models.Wedding

<button><a asp-controller="Users" asp-action="logout">LOGOUT</a></button>
<button><a href="/Dashboard">HOME</a></button>

<h2>Update Your Wedding Here</h2>               
<form asp-controller="Wedding" asp-action="UpdateWedding" method= "post" >
    <label asp-for="Bride"></label>
    <input type="text" asp-for="Bride"/>
    <span class="error" asp-validation-for="Bride"></span>

    <label asp-for="Groom"></label>
    <input type="text" asp-for="Groom" />
    <span class="error" asp-validation-for="Groom" ></span>

    <label asp-for="Date"></label>
    <input asp-for="Date"/>
    <span class="error" asp-validation-for="Date"></span>

    <label asp-for="Address"></label>
    <input asp-for="Address"/>
    <span class="error" asp-validation-for="Address" ></span>
    <input asp-for="UserId" type="hidden">
    <input asp-for="WeddingId" type="hidden">
    <br>
    <button type="submit" >Update Wedding</button>

</form>
